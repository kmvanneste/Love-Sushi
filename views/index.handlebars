{{!-- Row 1 --}}
<div class="container">
  <div class="row justify-content-center">
    <h1>Love Sushi</h1>
  </div>
  <div class="row justify-content-center">
    <h5>Track your daily sushi consumption!</h5>
  </div>

  {{!-- Row 3 with 2 Columns --}}
  <div class="row">
    <div class="col-md-6">
      <h2>Planning to Eat:</h2>

      <ul>
        {{#each sushi}}
        {{#if prepared}}
        {{> sushi-block prepared=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Eaten:</h2>

      <ul>
        {{#each sushi}}
        {{#unless prepared}}
        {{> sushi-block prepared=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  {{!-- Row 4 --}}
  <div class="row justify-content-center">
    <h2>Sushi History:</h2>
  </div>

  <div class="row justify-content-center">
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Sushi name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="prepared">Would you like it prepared or have you already eaten it?</label><br>
        <input type="radio" name="prepared" value="1" checked> Prepare<br>
        <input type="radio" name="prepared" value="0"> Eaten
      </div>

      <button type="submit btn btn-dark">Order Up!</button>
    </form>
  </div>

</div>